pnpm run format
pnpm run lint
git add .

if [ -f "yarn.lock" ] || [ -f "package-lock.json" ]; then
  echo "yarn.lock or package-lock.json is present. Do you want to commit it? (yes/no)"
  read -r answer
  if [ "$answer" != "yes" ]; then
    echo "Commit aborted. Please remove the lock file before committing."
    exit 1
  fi
fi
